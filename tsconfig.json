{
  "files": [],
  "references": [
    {
      "path": "./tsconfig.app.json"
    },
    {
      "path": "./tsconfig.node.json"
    }
  ],
  "compilerOptions": {
    "strict": false,
    // Disables all strict type-checking options
    "noImplicitAny": false,
    // Ignores 'any' type errors (TS7006, TS7031)
    "noUnusedLocals": false,
    // Ignores unused variables (TS6133)
    "noUnusedParameters": false,
    // Ignores unused function parameters (TS6133)
    "skipLibCheck": true
    // Speeds up build by skipping type checks on node_modules
  }
}
